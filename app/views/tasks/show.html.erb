<div class="container">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <p><%= @task.completed == true ? "Fait" : "A faire" %></p>

  <%= link_to edit_task_path, class:"btn btn-primary" do %>
    <i class="fas fa-edit"></i>
  <% end %>
  <%= link_to task_path, method:"delete", class:"btn btn-primary" do %>
  <i class="fas fa-trash"></i>
  <% end %>
  <%= link_to tasks_path, class:"btn btn-primary" do %>
    <i class="fas fa-home"></i>
  <% end %>
</div>
